#include<stdio.h>
int main(void) {
    int a;
    scanf("%d", &a);
    if (a > 0) {
    printf("You have entered a positive number.\n");
    }
    else {
    if (a == 0) {
    printf("You have entered zero.\n");
    }
    else {
    printf("Don't be so negative!\n");
    }
    
    }
    return 0;
    }




